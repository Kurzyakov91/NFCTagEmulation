<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kurzyakov.nfctagemulation">

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc.hce" android:required="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Сервис для HCE -->
        <service
            android:name=".MyHostApduService"
            android:permission="android.permission.BIND_NFC_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.nfc.cardemulation.action.HOST_APDU_SERVICE" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.cardemulation.host_apdu_service"
                android:resource="@xml/apduservice" />
        </service>

        <!-- Главная активность -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- NFCEmulationCardActivity -->
        <activity
            android:name=".NFCEmulationCardActivity"
            android:exported="false" />

        <!-- BroadcastReceiver для глобальных сообщений -->
        <receiver
            android:name=".NfcLogReceiver"
            android:exported="true"> <!-- Указано android:exported -->
            <intent-filter>
                <action android:name="com.kurzyakov.ACTION_NFC_LOG" />
            </intent-filter>
        </receiver>

    </application>

</manifest>